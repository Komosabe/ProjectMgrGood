@using CarWorkshop.Application.CarWorkshop.Commands.CreateCarWorkshop

@model CreateCarWorkshopCommand

@{
    ViewBag.Title = "Nowy warsztat";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h2>Dodaj warsztat</h2>
            <form asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Nazwa <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Opis</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="About" class="form-label">O warsztacie</label>
                    <textarea asp-for="About" class="form-control" rows="3"></textarea>
                </div>
                <fieldset class="form-group mb-3">
                    <legend>Dane kontaktowe</legend>
                    <div class="form-group mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Street" class="form-label">Ulica</label>
                        <input asp-for="Street" class="form-control" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="City" class="form-label">Miasto</label>
                        <input asp-for="City" class="form-control" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="PostalCode" class="form-label">Kod pocztowy</label>
                        <input asp-for="PostalCode" class="form-control" />
                    </div>
                </fieldset>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Zapisz</button>
                    <button type="reset" class="btn btn-secondary">Wyczyść</button>
                </div>
            </form>
        </div>
    </div>
</div>
