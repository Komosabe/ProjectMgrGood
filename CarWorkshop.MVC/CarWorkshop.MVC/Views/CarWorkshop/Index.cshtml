@model IEnumerable<CarWorkshop.Application.DTOs.CarWorkshopDto>

@{
    ViewBag.Title = "Lista warsztatów";
}

<p>
    <a asp-action="Create" class="btn btn-secondary">Create new</a>
</p>

<div class="container mt-5">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.PhoneNumber</h6>
                        <p class="card-text">@item.Description</p>
                        <a class="btn btn-primary btn-sm me-2" asp-controller="CarWorkshop" asp-action="Details" asp-route-encodedName="@item.Name">Details</a>
                        @if (item.IsEditable)
                        {
                            <a class="btn btn-secondary btn-sm"
                               asp-controller="CarWorkshop"
                               asp-action="Edit"
                               asp-route-encodedName="@item.Name">Edytuj</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>



